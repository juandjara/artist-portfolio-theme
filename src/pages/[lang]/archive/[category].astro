---
import type { GetStaticPathsResult } from "astro";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { getCategories } from "../../../lib/directus";
import { i18nConfig } from "../../../lib/i18n";
import type { PageBlocks } from "../../../lib/directus.types";
import Blocks from "../../../components/Blocks.astro";
import Posts from '../../../components/blocks/Posts.astro';

export async function getStaticPaths() {
  const language = Astro.currentLocale ?? i18nConfig.defaultLocale;
  const categories = await getCategories(language)

  return i18nConfig.locales.map((lang) => {
    return categories.map((cat) => {
      return {
        params: { category: cat.permalink ?? '', lang },
      }
    }) satisfies GetStaticPathsResult;
  }).flat()
}

const categoryId = Astro.params.category ?? null;
const language = (Astro.params.lang as string) ?? i18nConfig.defaultLocale;

const categories = await getCategories(language)
const category = categories.find((c) => c.permalink === categoryId)
const title = category?.name ?? '';
const blocks = category?.blocks.filter(
  (b) => b && typeof b !== "string",
) as PageBlocks[] ?? []

---

<BaseLayout showTitle={false} pageTitle={title}>
  <Blocks blocks={blocks} />
  <Posts />  
</BaseLayout>
